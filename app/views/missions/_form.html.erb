<% if flash[:user_error] %>
    <div id="error_explanation">
        <h2>    
            <%= pluralize(flash[:user_error].count, "error") %>
      prohibited this mission from being saved:
    </h2>
 
    <ul>
    <% flash[:user_error].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @mission do |s| %>

<label>Name:</label>
<%= s.text_field :name %><br><br>

<label>Scientist:</label>
<%= s.collection_select :scientist_id, @scientists, :id, :name %><br><br>


<label>Planet:</label>
<%= s.collection_select :planet_id, @planets, :id, :name %><br><br>

<%= s.submit "Save Mission" %>
<% end %>